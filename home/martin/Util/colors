#!/bin/zsh

function printnum() {
  printf "%4s" "$1"
}

for (( i = 0; i < 2; i++ ))
do
  oline=""
  for (( j = 0; j < 8; j++ ))
  do
    ccc=$(( j + i * 8 ))
    oline="$oline[38;5;${ccc}m$(printnum $ccc)[0m"
    oline="$oline[48;5;${ccc}m a[0m"
  done
  echo $oline
done
for (( i = 0; i < 3; i++ ))
do
  for (( j = 0; j < 6; j++ ))
  do
    oline=""
    if [[ $i -eq 1 ]]; then
      tj=$(( 5 - j ))
    else
      tj=$j
    fi
    for (( k = 0; k < 12; k++ ))
    do
      if [[ $k -lt 6 ]]; then
        tk=$(( k * 6 ))
      else
        tk=$(( (11 - k) * 6 + 36 ))
      fi
      ccc=$(( 16 + tj + tk + i * 72 ))
      oline="$oline[38;5;${ccc}m$(printnum $ccc)[0m"
      oline="$oline[48;5;${ccc}m a[0m"
    done
    echo $oline
  done
done
for (( i = 0; i < 2; i++ ))
do
  oline=""
  for (( j = 0; j < 12; j++ ))
  do
    ccc=$(( j + i * 12 + 232 ))
    oline="$oline[38;5;${ccc}m$(printnum $ccc)[0m"
    oline="$oline[48;5;${ccc}m a[0m"
  done
  echo $oline
done

